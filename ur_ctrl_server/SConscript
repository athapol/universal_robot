libpath = ['./include/ur_c_api']
libs = ['robotcomm', 'kinematics', 'configuration', 'dev', 'collision', 'm', 'math', 'legacy']
cpptestdefines = ['NDEBUG', 'LINUXSOCKETS', 'FLOAT64', 'TEST_CONTROLLER']
cppsimdefines = ['NDEBUG', 'LINUXSOCKETS', 'FLOAT64', 'SIMULATION_CONTROLLER']
cppdefines = ['NDEBUG', 'LINUXSOCKETS', 'FLOAT64', 'HARDWARE_CONTROLLER']
ccflags = '-O2 -Wall -m32'
cpppath = ['./include', './include/ur_c_api']

###############################################################################

# Build 'example' (link using g++)
VariantDir('build', 'src', duplicate=0)
env = Environment(CC = 'g++',  # link using g++
                  CPPPATH=cpppath,
                  CPPDEFINES=cppdefines)
test_object_list = env.Object(source=sources_test)
env.Program(target='#bin/ur_test_server',
            source=test_object_list,
            LIBPATH=libpath,
            LIBS=libs, 
            CCFLAGS=ccflags,
            CPPDEFINES=cpptestdefines)
test_object_list = env.Object(source=sources_sim)
env.Program(target='#bin/ur_sim_server',
            source=test_object_list,
            LIBPATH=libpath,
            LIBS=libs, 
            CCFLAGS=ccflags,
            CPPDEFINES=cppsimdefines)
real_object_list = env.Object(source=sources_real)
env.Program(target='#bin/ur_ctrl_server',
            source=real_object_list,
            LIBPATH=libpath,
            LIBS=libs, 
            CCFLAGS=ccflags,
            CPPDEFINES=cppdefines)
